<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :artist1 %>
    <%= form.text_field :artist1, id: :event_artist1 %>
  </div>

  <div class="field">
    <%= form.label :artist2 %>
    <%= form.text_field :artist2, id: :event_artist2 %>
  </div>

  <div class="field">
    <%= form.label :cover %>
    <%= form.number_field :cover, id: :event_cover %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
