<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Icon</th>
          <th>Website</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td><%= artist.icon %></td>
            <td><%= artist.website %></td>
            <td><%= artist.genre %></td>
            <td><%= link_to 'Show', artist, class: 'btn btn-mini btn-success', style: 'border: 1px solid black;' %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-mini btn-warning', style: 'border: 1px solid black;' %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, class: 'btn btn-mini btn-danger', style: 'border: 1px solid black;', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div><%= link_to 'New Artist', new_artist_path, class: 'btn btn-mini btn-success', style: 'background-color: white; color: black; width: 200px;'%></div>
