<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Icon</th>
          <th>Website</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td><%= artist.icon %></td>
            <td><%= artist.website %></td>
            <td><%= artist.genre %></td>
            <td><%= link_to 'Show', artist, class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-mini btn-warning' %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="btn btn-outline-primary"><%= link_to 'New Artist', new_artist_path %></div>
